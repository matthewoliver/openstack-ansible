---
storage-infra_hosts:
  aio1:
    ip: fd00:0:0:1::100

storage_hosts:
  aio1:
    ip: fd00:0:0:1::100
    container_vars:
      cinder_backends:
        limit_container_types: cinder_volume
        lvm:
          volume_group: cinder-volumes
          volume_driver: cinder.volume.drivers.lvm.LVMVolumeDriver
          volume_backend_name: LVM_iSCSI
          iscsi_ip_address: "fd00:0:0:1::100"
          lvm_type: "thin"
